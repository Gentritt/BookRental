@model IEnumerable<BookRental.Models.Book>
@using BookRental.Models
@{
    ViewBag.Title = "Index";
}

<h3>Manage Books</h3>
<link href="~/Content/Site.css" rel="stylesheet" />
<p>
	<a type="button" class="btn btn-success btn-sm" href="@Url.Action("Create")">

		<span class="glyphicon glyphicon-plus"></span>
		<span>Create New Book</span>
	</a>

</p>
<br />
<table class="table table-condensed table-hover">
	<tr class="table-header">

		<th>
			@Html.DisplayNameFor(model => model.ISBN)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Title)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Avaliability)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Price)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Genre.Name)
		</th>
        <th></th>
		<th></th>
	</tr>

@foreach (var item in Model) {
<tr>

	<td>
		@Html.DisplayFor(modelItem => item.ISBN)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Title)
	</td>

	<td>
		@Html.DisplayFor(modelItem => item.Avaliability)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Price)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Genre.Name)
	</td>
	<td>
		@Html.Partial("_TableButtonPartial",new PartialButtons { BookId = item.Id })
	</td>
</tr>
}

</table>
