@model BookRental.Models.MembershipType
@{
	ViewBag.Title = "Create";
}
<link href="~/Content/Site.css" rel="stylesheet" />
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h3>Create New Genre</h3>
		<hr />
		<div class="form-border">
			<div class="form-group">
				@Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.SignUpFee, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(m => m.SignUpFee, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(m => m.SignUpFee, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.ChargeRateOneMonth, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(m => m.ChargeRateOneMonth, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(m => m.ChargeRateOneMonth, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.ChargeRateSixMonth, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(m => m.ChargeRateSixMonth, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(m => m.ChargeRateSixMonth, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<br />
	</div>
	<div>
		<input type="submit" value="Create" class="btn btn-primary btn-sm" />
		@Html.Partial("_BackToListButtonPartial")
	</div>
}


